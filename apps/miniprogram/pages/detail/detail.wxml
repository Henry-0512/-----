<!--pages/detail/detail.wxml-->
<view class="container">
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading">
    <text>加载中...</text>
  </view>

  <!-- 错误状态 -->
  <view wx:elif="{{error}}" class="error">
    <text>{{error}}</text>
    <button class="btn-primary" bindtap="onRetry">重试</button>
  </view>

  <!-- 商品详情内容 -->
  <view wx:elif="{{sku}}" class="detail-content">
    <!-- 图片展示 -->
    <view class="image-section">
      <image 
        class="main-image" 
        src="{{sku.images[selectedImage]}}" 
        mode="aspectFill"
        bindtap="onImagePreview"
      ></image>
      <view class="image-indicators">
        <view 
          wx:for="{{sku.images}}" 
          wx:key="*this" 
          class="indicator {{index === selectedImage ? 'active' : ''}}"
          data-index="{{index}}"
          bindtap="onImageSelect"
        ></view>
      </view>
    </view>

    <!-- 商品基本信息 -->
    <view class="info-section">
      <text class="sku-name">{{sku.title || sku.name}}</text>
      <text class="sku-brand">{{sku.brand}}</text>
      
      <view class="price-info">
        <text class="monthly-price">¥{{sku.monthlyPrice || Math.ceil(sku.price/50)}}/月</text>
        <text class="original-price">原价 ¥{{sku.price || sku.originalPrice}}</text>
      </view>

      <view class="sku-attributes">
        <view class="attribute">
          <text class="attr-label">分类：</text>
          <text class="attr-value">{{sku.category ? sku.category.join(' / ') : ''}}</text>
        </view>
        <view class="attribute">
          <text class="attr-label">风格：</text>
          <text class="attr-value">{{sku.style ? sku.style.join('、') : ''}}</text>
        </view>
        <view class="attribute">
          <text class="attr-label">材质：</text>
          <text class="attr-value">{{sku.material ? sku.material.join('、') : ''}}</text>
        </view>
        <view class="attribute">
          <text class="attr-label">颜色：</text>
          <text class="attr-value">{{sku.color ? sku.color.join('、') : ''}}</text>
        </view>
      </view>

      <!-- 库存状态 -->
      <view class="stock-info">
        <text class="stock-label">库存：</text>
        <text class="stock-value {{(sku.stock && sku.stock[0] && sku.stock[0].qty > 0) ? 'in-stock' : 'out-of-stock'}}">
          {{(sku.stock && sku.stock[0]) ? (sku.stock[0].qty > 0 ? '现货 ' + sku.stock[0].qty + ' 件' : '暂时缺货') : '暂时缺货'}}
        </text>
      </view>
    </view>

    <!-- 尺寸信息 -->
    <view class="size-section">
      <view class="section-header">
        <text class="section-title">尺寸信息</text>
        <text class="size-guide-btn" bindtap="onShowSizeGuide">尺寸示意图</text>
      </view>
      <!-- 产品尺寸 -->
      <view class="size-info">
        <view class="size-group">
          <text class="size-group-title">产品尺寸</text>
          <view class="size-items">
            <view class="size-item">
              <text class="size-label">长：</text>
              <text class="size-value">{{sku.width_mm ? (sku.width_mm/10) : (sku.dimensions ? sku.dimensions.length : 0)}}cm</text>
            </view>
            <view class="size-item">
              <text class="size-label">宽：</text>
              <text class="size-value">{{sku.depth_mm ? (sku.depth_mm/10) : (sku.dimensions ? sku.dimensions.width : 0)}}cm</text>
            </view>
            <view class="size-item">
              <text class="size-label">高：</text>
              <text class="size-value">{{sku.height_mm ? (sku.height_mm/10) : (sku.dimensions ? sku.dimensions.height : 0)}}cm</text>
            </view>
          </view>
        </view>
        
        <!-- 包装尺寸 -->
        <view wx:if="{{sku.package}}" class="size-group">
          <text class="size-group-title">包装尺寸</text>
          <view class="size-items">
            <view class="size-item">
              <text class="size-label">长：</text>
              <text class="size-value">{{sku.package.width_mm/10}}cm</text>
            </view>
            <view class="size-item">
              <text class="size-label">宽：</text>
              <text class="size-value">{{sku.package.depth_mm/10}}cm</text>
            </view>
            <view class="size-item">
              <text class="size-label">高：</text>
              <text class="size-value">{{sku.package.height_mm/10}}cm</text>
            </view>
            <view class="size-item">
              <text class="size-label">重量：</text>
              <text class="size-value">{{sku.package.weight_kg}}kg</text>
            </view>
          </view>
        </view>
      </view>
    </view>

    <!-- 租赁配置 -->
    <view class="rental-section">
      <text class="section-title">租赁配置</text>
      <view class="duration-selector">
        <text class="duration-label">租赁时长：</text>
        <view class="duration-controls">
          <view class="duration-btn" data-type="minus" bindtap="onDurationChange">-</view>
          <text class="duration-value">{{duration}}个月</text>
          <view class="duration-btn" data-type="plus" bindtap="onDurationChange">+</view>
        </view>
      </view>
      <view class="total-price">
        <text>总计：¥{{sku.monthlyPrice * duration}}</text>
      </view>
    </view>

    <!-- 配送信息 -->
    <view wx:if="{{sku.delivery}}" class="delivery-section">
      <text class="section-title">配送信息</text>
      <view class="delivery-info">
        <view class="delivery-item">
          <text class="delivery-label">配送方式：</text>
          <text class="delivery-value">{{sku.delivery.modes ? sku.delivery.modes.join('、') : ''}}</text>
        </view>
        <view class="delivery-item">
          <text class="delivery-label">配送时间：</text>
          <text class="delivery-value">{{sku.delivery.eta_days ? sku.delivery.eta_days[0] + '-' + sku.delivery.eta_days[1] + '天' : ''}}</text>
        </view>
        <view class="delivery-item">
          <text class="delivery-label">上楼服务：</text>
          <text class="delivery-value">{{sku.delivery.upstairs ? '支持' : '不支持'}}</text>
        </view>
      </view>
    </view>

    <!-- 保养说明 -->
    <view wx:if="{{sku.care}}" class="care-section">
      <text class="section-title">保养说明</text>
      <text class="care-content">{{sku.care}}</text>
    </view>

    <!-- 常见问题 -->
    <view wx:if="{{sku.faq && sku.faq.length > 0}}" class="faq-section">
      <text class="section-title">常见问题</text>
      <view class="faq-list">
        <view wx:for="{{sku.faq}}" wx:key="q" class="faq-item">
          <text class="faq-question">Q: {{item.q}}</text>
          <text class="faq-answer">A: {{item.a}}</text>
        </view>
      </view>
    </view>

    <!-- 推荐商品 -->
    <view wx:if="{{recommendations.length > 0}}" class="recommendations-section">
      <text class="section-title">相关推荐</text>
      <scroll-view class="recommendations-scroll" scroll-x="true">
        <product-card
          wx:for="{{recommendations}}" 
          wx:key="id"
          product="{{item}}"
          card-type="grid"
          show-favorite="{{true}}"
          bind:cardtap="onRecommendationTap"
        />
      </scroll-view>
    </view>
  </view>

  <!-- 底部操作栏 -->
  <view wx:if="{{sku}}" class="bottom-actions">
    <view class="action-btn favorite-btn {{isFavorited ? 'favorited' : ''}}" bindtap="onToggleFavorite">
      <text class="action-icon">{{isFavorited ? '♥' : '♡'}}</text>
    </view>
    <button class="action-btn share-btn" open-type="share">分享</button>
    <button class="action-btn primary-btn" bindtap="onCreateOrder">
      立即租赁 ¥{{(sku.monthlyPrice || Math.ceil(sku.price/50)) * duration}}
    </button>
  </view>

  <!-- 尺寸示意图弹窗 -->
  <size-sketch
    visible="{{showSizeGuide}}"
    product="{{sku}}"
    mode="modal"
    bind:close="onHideSizeGuide"
  />
</view>
