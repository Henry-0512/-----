/* pages/detail/detail.wxss */
.container {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
  box-sizing: border-box;
  width: 100%;
  overflow-x: hidden;
}

.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #666;
}

.detail-content {
  background: white;
  width: 100%;
  box-sizing: border-box;
}

/* 图片展示区域 */
.image-section {
  position: relative;
  background: white;
}

.main-image {
  width: 100%;
  height: 600rpx;
}

.image-indicators {
  display: flex;
  justify-content: center;
  padding: 24rpx;
  gap: 16rpx;
}

.indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ddd;
  transition: background 0.3s;
}

.indicator.active {
  background: #007AFF;
}

/* 基本信息区域 */
.info-section {
  padding: 32rpx;
  border-bottom: 16rpx solid #f8f8f8;
  width: 100%;
  box-sizing: border-box;
  word-wrap: break-word;
}

.sku-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
}

.sku-brand {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 库存和配送信息 */
.availability-info {
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.stock-info,
.eta-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.stock-label,
.eta-label {
  font-size: 26rpx;
  color: #666;
}

.stock-value {
  font-size: 26rpx;
  font-weight: 500;
}

.stock-value.in-stock {
  color: #52c41a;
}

.stock-value.out-of-stock {
  color: #ff4d4f;
}

.eta-value {
  font-size: 26rpx;
  color: #007AFF;
  background: #e6f3ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 快速操作按钮 */
.quick-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.action-btn::after {
  border: none;
}

.secondary-btn {
  background: #f8f9fa;
  color: #333;
  border: 1rpx solid #e9ecef;
}

.primary-btn {
  background: #007AFF;
  color: white;
  flex: 2;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 24rpx;
}

.price-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
  gap: 8rpx;
}

.monthly-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

/* 价格咨询模式 */
.price-inquiry-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.inquiry-text {
  font-size: 32rpx;
  color: #666;
  font-style: italic;
}

.inquiry-btn-detail {
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  align-self: flex-start;
  margin: 0;
}

.inquiry-btn-detail:active {
  background: #0056CC;
}

.inquiry-btn-detail::after {
  border: none;
}

/* 租期配置区域 */
.rental-config {
  background: white;
  margin: 16rpx 0;
  padding: 32rpx;
}

.config-item {
  margin-bottom: 32rpx;
}

.config-label {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

/* 租期单位选择 */
.radio-group {
  display: flex;
  gap: 32rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.radio-text {
  font-size: 28rpx;
  color: #333;
}

/* 租期时长选择器 */
.duration-selector {
  display: flex;
  align-items: center;
}

.duration-input {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  gap: 16rpx;
}

.duration-number {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  min-width: 80rpx;
}

.duration-unit {
  font-size: 28rpx;
  color: #666;
}

/* 数量选择器 */
.quantity-selector {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.qty-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  background: white;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
}

.qty-btn:active {
  background: #f0f0f0;
}

.qty-btn::after {
  border: none;
}

.qty-input {
  width: 120rpx;
  height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 16rpx;
}

/* 城市选择器 */
.city-selector {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.city-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.city-input:active {
  border-color: #007AFF;
  background: #f0f9ff;
}

.city-text {
  font-size: 28rpx;
  color: #333;
}

.city-input .city-text[data-placeholder] {
  color: #999;
}

.city-arrow {
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.delivery-eta {
  padding: 12rpx 16rpx;
  background: #E8F5E8;
  border-radius: 8rpx;
  text-align: center;
}

.eta-text {
  font-size: 24rpx;
  color: #2E7D32;
  font-weight: 500;
}

/* 服务选择 */
.services-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.service-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.service-item.selected {
  background: #E3F2FD;
  border: 2rpx solid #2196F3;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.service-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.service-note {
  font-size: 24rpx;
  color: #999;
}

.service-price {
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.service-check {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  font-size: 32rpx;
  color: #2196F3;
  font-weight: bold;
}

/* 报价明细区域 */
.quote-section {
  background: white;
  margin: 16rpx 0;
  padding: 32rpx;
}

.quote-breakdown {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.quote-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.quote-label {
  font-size: 28rpx;
  color: #333;
}

.quote-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.quote-item.service-item .quote-label {
  color: #666;
  font-size: 26rpx;
}

.quote-item.discount .quote-label {
  color: #4CAF50;
}

.discount-value {
  color: #4CAF50 !important;
}

.quote-item.deposit .quote-label {
  color: #FF9800;
}

.quote-divider {
  height: 2rpx;
  background: #e0e0e0;
  margin: 16rpx 0;
}

.quote-item.subtotal {
  padding-top: 16rpx;
  border-top: 2rpx solid #f0f0f0;
}

.quote-item.total {
  padding: 20rpx 0;
  background: #f8f8f8;
  margin: 0 -16rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  border-radius: 12rpx;
}

.total-value {
  font-size: 36rpx !important;
  color: #FF6B6B !important;
  font-weight: bold !important;
}

.quote-note {
  margin-top: 24rpx;
  padding: 16rpx;
  background: #FFF3E0;
  border-radius: 12rpx;
}

.note-text {
  font-size: 24rpx;
  color: #F57C00;
  line-height: 1.5;
}

/* 报价状态 */
.quote-loading, .quote-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: white;
  margin: 16rpx 0;
  border-radius: 12rpx;
  color: #666;
  font-size: 28rpx;
}

.sku-attributes {
  margin-bottom: 24rpx;
}

.attribute {
  display: flex;
  margin-bottom: 16rpx;
}

.attr-label {
  color: #666;
  font-size: 28rpx;
  width: 120rpx;
}

.attr-value {
  color: #333;
  font-size: 28rpx;
}

.sku-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 12rpx;
}

/* 尺寸信息区域 */
.size-section {
  padding: 32rpx;
  background: white;
  border-bottom: 16rpx solid #f8f8f8;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.size-guide-btn {
  color: #007AFF;
  font-size: 28rpx;
}

.size-info {
  display: flex;
  justify-content: space-around;
}

.size-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.size-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.size-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 租赁配置区域 */
.rental-section {
  padding: 32rpx;
  background: white;
  border-bottom: 16rpx solid #f8f8f8;
}

.duration-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.duration-label {
  font-size: 28rpx;
  color: #333;
}

.duration-controls {
  display: flex;
  align-items: center;
}

.duration-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.duration-value {
  margin: 0 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.total-price {
  text-align: right;
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
}

/* 推荐商品区域 */
.recommendations-section {
  padding: 32rpx;
  background: white;
}

.recommendations-scroll {
  white-space: nowrap;
  margin-top: 24rpx;
}

.recommendation-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 24rpx;
  vertical-align: top;
}

.rec-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.rec-name {
  display: block;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rec-price {
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: bold;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 24rpx;
  background: white;
  border-top: 2rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  gap: 16rpx;
}

.action-btn {
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.favorite-btn {
  width: 96rpx;
  background: #f8f8f8;
  color: #666;
  transition: all 0.2s ease;
}

.favorite-btn.favorited {
  background: #FF6B6B;
  color: white;
}

.action-icon {
  font-size: 36rpx;
}

.share-btn {
  width: 120rpx;
  background: #f8f8f8;
  color: #333;
}

.primary-btn {
  flex: 1;
  background: #007AFF;
  color: white;
}

/* 新章节样式 */
.delivery-section,
.care-section,
.faq-section {
  padding: 32rpx;
  background: white;
  margin-bottom: 20rpx;
}

.delivery-info {
  margin-top: 20rpx;
}

.delivery-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.delivery-label {
  font-size: 26rpx;
  color: #666;
  width: 150rpx;
}

.delivery-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.care-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.faq-list {
  margin-top: 20rpx;
}

.faq-item {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.faq-question {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.faq-answer {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.size-group {
  margin-bottom: 24rpx;
}

.size-group-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.size-items {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
