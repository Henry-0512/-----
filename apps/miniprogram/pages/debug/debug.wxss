/* pages/debug/debug.wxss */

.container {
  padding: 40rpx;
}

.debug-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

button {
  margin: 8rpx 0;
}

.log-section {
  margin-top: 40rpx;
  background: #f5f5f5;
  padding: 24rpx;
  border-radius: 8rpx;
}

.log-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.log-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  white-space: pre-wrap;
  max-height: 600rpx;
  overflow-y: auto;
}
