/* pages/profile/profile.wxss */

.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 40rpx 30rpx 40rpx;
  background: #f5f5f5;
}

.help-icon, .settings-icon {
  font-size: 48rpx;
  color: #333;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 账户卡片区域 */
.account-cards {
  display: flex;
  gap: 20rpx;
  padding: 0 40rpx 40rpx 40rpx;
}

.account-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.main-card {
  background: #333;
  color: white;
}

.card-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}

.main-card .card-title {
  color: white;
}

.card-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 16rpx;
  height: 16rpx;
  background: #4CAF50;
  border-radius: 50%;
  font-size: 16rpx;
  color: #4CAF50;
}

/* 区域样式 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 0 40rpx 20rpx 40rpx;
  display: block;
}

/* 菜单项样式 */
.menu-item {
  background: white;
  padding: 32rpx 40rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 个人详情网格 */
.details-grid {
  background: white;
  padding: 20rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rpx;
  border-radius: 12rpx;
  margin: 0 40rpx;
  overflow: hidden;
}

.detail-item {
  background: white;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.detail-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  color: #666;
}

.detail-title {
  font-size: 24rpx;
  color: #333;
  line-height: 1.3;
  text-align: center;
}

/* 登录状态 */
.login-status {
  position: fixed;
  bottom: 140rpx;
  left: 40rpx;
  right: 40rpx;
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.login-info {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.login-btn, .logout-btn {
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.login-btn {
  width: 100%;
}

.logout-btn {
  background: #FF3B30;
  margin-left: 20rpx;
}

.login-btn:active, .logout-btn:active {
  opacity: 0.8;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .account-cards {
    gap: 16rpx;
    padding: 0 30rpx 30rpx 30rpx;
  }
  
  .account-card {
    padding: 24rpx 16rpx;
  }
  
  .card-icon {
    font-size: 40rpx;
    margin-bottom: 12rpx;
  }
  
  .card-title {
    font-size: 22rpx;
  }
  
  .section-title {
    font-size: 28rpx;
    padding: 0 30rpx 16rpx 30rpx;
  }
  
  .details-grid {
    margin: 0 30rpx;
  }
  
  .detail-item {
    padding: 32rpx 16rpx;
  }
  
  .detail-icon {
    font-size: 40rpx;
    margin-bottom: 12rpx;
  }
  
  .detail-title {
    font-size: 22rpx;
  }
}