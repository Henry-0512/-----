.page { background: #fff; min-height: 100vh; }
.header { padding: 24rpx; border-bottom: 16rpx solid #f5f5f5; }
.title { font-size: 32rpx; font-weight: 700; color: #111; }
.form { padding: 24rpx; }
.form-row { display: flex; align-items: center; padding: 20rpx 0; border-bottom: 2rpx solid #f5f5f5; }
.label { width: 160rpx; color: #666; font-size: 28rpx; }
.input { flex: 1; height: 72rpx; background: #f6f7f9; border-radius: 12rpx; padding: 0 20rpx; font-size: 28rpx; }
.picker { flex: 1; height: 72rpx; display: flex; align-items: center; padding: 0 20rpx; background: #f6f7f9; border-radius: 12rpx; color: #333; }
.btn { margin-top: 32rpx; background: #1677ff; color: #fff; border-radius: 12rpx; }
.btn::after { border: none; }


