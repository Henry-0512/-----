<view class="page">
  <view class="header">
    <text class="title">个人资料</text>
  </view>
  <view class="form">
    <view class="form-row">
      <text class="label">昵称</text>
      <input class="input" value="{{nickname}}" placeholder="请输入昵称" bindinput="onNickInput"/>
    </view>
    <view class="form-row">
      <text class="label">生日</text>
      <picker mode="date" value="{{birthday}}" start="1900-01-01" end="2099-12-31" bindchange="onBirthChange">
        <view class="picker">{{birthday || '选择日期'}}</view>
      </picker>
    </view>
    <view class="form-row">
      <text class="label">手机号</text>
      <input class="input" type="number" maxlength="11" value="{{phone}}" placeholder="请输入手机号" bindinput="onPhoneInput"/>
    </view>
    <view class="form-row">
      <text class="label">邮箱</text>
      <input class="input" type="text" value="{{email}}" placeholder="name@example.com" bindinput="onEmailInput"/>
    </view>
    <button class="btn" bindtap="onSave">保存</button>
  </view>
</view>


