<!--pages/profile/profile.wxml-->
<view class="container">
  <!-- 顶部导航区域 -->
  <view class="header">
    <text class="help-icon">?</text>
    <text class="header-title">Account</text>
    <text class="settings-icon">⚙️</text>
  </view>

  <!-- 账户卡片区域 -->
  <view class="account-cards">
    <view class="account-card main-card">
      <view class="card-icon">👤</view>
      <text class="card-title">Account</text>
    </view>
    <view class="account-card">
      <view class="card-icon">🎁</view>
      <text class="card-title">Rewards</text>
      <view class="card-badge">●</view>
    </view>
    <view class="account-card">
      <view class="card-icon">📊</view>
      <text class="card-title">Membership</text>
    </view>
  </view>

  <!-- 我的商品区域 -->
  <view class="section">
    <text class="section-title">My Items</text>
    <view class="menu-item" bindtap="onViewCart">
      <view class="menu-icon">🛒</view>
      <text class="menu-text">购物车</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="onViewFavorites">
      <view class="menu-icon">❤️</view>
      <text class="menu-text">我的收藏</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="onViewOrders">
      <view class="menu-icon">📋</view>
      <text class="menu-text">我的订单</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 个人详情区域 -->
  <view class="section">
    <text class="section-title">My details</text>
    <view class="details-grid">
      <view class="detail-item" bindtap="onPersonalDetails">
        <view class="detail-icon">👤</view>
        <text class="detail-title">Personal details</text>
      </view>
      <view class="detail-item" bindtap="onAddressBook">
        <view class="detail-icon">📍</view>
        <text class="detail-title">Address book</text>
      </view>
      <view class="detail-item" bindtap="onPaymentDetails">
        <view class="detail-icon">💳</view>
        <text class="detail-title">Payment details</text>
      </view>
      <view class="detail-item" bindtap="onManageAccount">
        <view class="detail-icon">✏️</view>
        <text class="detail-title">Manage account</text>
      </view>
    </view>
  </view>

  <!-- 价格承诺区域 -->
  <view class="section">
    <text class="section-title">Our price promise</text>
    <view class="menu-item" bindtap="onPriceMatch">
      <view class="menu-icon">ℹ️</view>
      <text class="menu-text">How we price match</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="onPriceRefund">
      <view class="menu-icon">📋</view>
      <text class="menu-text">Request a price promise refund</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 应用设置区域 -->
  <view class="section">
    <text class="section-title">App</text>
    <view class="menu-item" bindtap="onSettings">
      <view class="menu-icon">⚙️</view>
      <text class="menu-text">Settings</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="onChooseIcon">
      <view class="menu-icon">📱</view>
      <text class="menu-text">Choose app icon</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="onFeedback">
      <view class="menu-icon">💬</view>
      <text class="menu-text">Leave app feedback</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 帮助区域 -->
  <view class="section">
    <text class="section-title">Help</text>
    <view class="menu-item" bindtap="onHelpContact">
      <view class="menu-icon">?</view>
      <text class="menu-text">Help & contact us</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 更多服务区域 -->
  <view class="section">
    <text class="section-title">More from us</text>
    <view class="menu-item" bindtap="onInStoreMode">
      <view class="menu-icon">🏪</view>
      <text class="menu-text">In-store mode</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="onOurServices">
      <view class="menu-icon">🔷</view>
      <text class="menu-text">Our services</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 登录状态显示（隐藏但保留功能） -->
  <view wx:if="{{userInfo.isLoggedIn}}" class="login-status">
    <text class="login-info">已登录: {{userInfo.openid}}</text>
    <button class="logout-btn" bindtap="onLogout">退出登录</button>
  </view>
  <view wx:else class="login-status">
    <button class="login-btn" bindtap="onLogin">微信登录</button>
  </view>
</view>