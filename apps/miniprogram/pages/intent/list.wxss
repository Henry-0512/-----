.intent-container { padding: 24rpx; }
.intent-header { margin-bottom: 16rpx; }
.intent-title { font-size: 34rpx; font-weight: 700; color: #111; }
.intent-sub { display:block; margin-top: 8rpx; font-size: 24rpx; color: #8a8f99; }

.intent-empty { padding: 120rpx 40rpx; text-align:center; color:#8a8f99; }
.intent-empty-icon { font-size: 96rpx; display:block; margin-bottom: 16rpx; }
.intent-empty-text { display:block; margin-bottom: 24rpx; }

.intent-list { display:flex; flex-direction:column; gap: 16rpx; }
.intent-item { display:flex; align-items:center; gap: 16rpx; background:#fff; border-radius: 16rpx; padding: 16rpx; box-shadow: 0 2rpx 12rpx rgba(0,0,0,.04); }
.intent-cover { width: 160rpx; height: 120rpx; border-radius: 12rpx; object-fit: cover; }
.intent-info { flex:1; }
.intent-name { font-size: 28rpx; color:#333; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden; }
.intent-meta { margin-top: 6rpx; font-size: 24rpx; color:#6b7280; }
.intent-qty { display:flex; align-items:center; gap: 12rpx; margin-top: 10rpx; }
.intent-qty-btn { width: 56rpx; height: 56rpx; border-radius: 50%; background:#f3f4f6; }
.intent-qty-num { min-width: 48rpx; text-align:center; font-size: 26rpx; }
.intent-remove { font-size: 24rpx; color:#ff4d4f; background:transparent; }
.intent-remove::after { border:none; }

.intent-actions { margin-top: 20rpx; display:flex; gap: 12rpx; }
.intent-btn { flex:1; height: 72rpx; border-radius: 14rpx; display:flex; align-items:center; justify-content:center; }
.intent-primary { color:#fff; background: linear-gradient(90deg,#6F7BF7 0%,#9B6DF3 100%); }
.intent-primary::after { border:none; }
.intent-secondary { background:#f3f4f6; color:#333; }
.intent-secondary::after { border:none; }

/* 联系方式 */
.intent-contact { margin-top: 16rpx; background:#fff; border-radius:16rpx; padding:16rpx; box-shadow:0 2rpx 12rpx rgba(0,0,0,.04); }
.intent-contact-title { font-size: 28rpx; font-weight: 600; color:#333; }
.intent-field { margin-top: 12rpx; }
.intent-label { display:block; font-size: 24rpx; color:#6b7280; margin-bottom: 6rpx; }
.intent-input { height: 72rpx; border-radius: 12rpx; background:#f7f8fa; padding: 0 16rpx; font-size: 28rpx; }
.intent-input.invalid { border: 2rpx solid #ff4d4f; background: #fff7f7; }
.intent-error { margin-top: 6rpx; font-size: 22rpx; color:#ff4d4f; }
.intent-tip { display:block; margin-top: 8rpx; font-size: 22rpx; color:#8a8f99; }

.intent-prefer { display:flex; gap: 12rpx; }
.intent-prefer-btn { flex:0 0 auto; padding: 12rpx 20rpx; border-radius: 999rpx; background:#f3f4f6; color:#333; }
.intent-prefer-btn.active { background:#e8ecff; color:#2F3BFF; }


