/* pages/cart/cart.wxss */

.container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 140rpx; /* 为底部结算区域留空间 */
}

/* 页面标题 */
.page-header {
  background: white;
  padding: 32rpx 24rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111;
}

.cart-count {
  font-size: 28rpx;
  color: #666;
}

/* 购物车内容 */
.cart-content {
  flex: 1;
}

/* 购物车商品列表 */
.cart-items {
  background: white;
  margin-top: 16rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 16rpx;
}

.cart-item:last-child {
  border-bottom: none;
}

/* 选择框 */
.item-checkbox {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: white;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: #007AFF;
  border-color: #007AFF;
}

/* 商品图片 */
.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 商品信息 */
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.2;
}

.item-price {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  margin-top: 4rpx;
}

.price-symbol {
  font-size: 24rpx;
  font-weight: 600;
  color: #FF6B35;
}

.price-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #FF6B35;
}

.price-unit {
  font-size: 20rpx;
  color: #666;
}

/* 商品操作 */
.item-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.quantity-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
}

.qty-btn {
  width: 32rpx;
  height: 32rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #007AFF;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.qty-btn:active {
  transform: scale(0.9);
}

.qty-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
  min-width: 40rpx;
  text-align: center;
}

.remove-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-icon {
  font-size: 24rpx;
  color: #FF3B30;
}

/* 底部结算区域 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.08);
}

.select-all {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.select-all-checkbox {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.select-all-text {
  font-size: 28rpx;
  color: #111;
}

.total-section {
  flex: 1;
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 4rpx;
}

.total-label {
  font-size: 24rpx;
  color: #666;
}

.total-symbol {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF6B35;
}

.total-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #FF6B35;
}

.total-unit {
  font-size: 20rpx;
  color: #666;
}

.checkout-btn {
  background: #ddd;
  color: #999;
  padding: 20rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.checkout-btn.active {
  background: #007AFF;
  color: white;
}

.checkout-btn:active {
  transform: scale(0.98);
}

.checkout-text {
  white-space: nowrap;
}

/* 空购物车状态 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
  line-height: 1.4;
}

.go-shopping-btn {
  background: #007AFF;
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.go-shopping-btn:active {
  opacity: 0.8;
}

.go-shopping-text {
  color: white;
}
