.srch-header{display:flex;align-items:center;padding:12rpx 20rpx;background:#fff}
.srch-input{flex:1;background:#f5f5f7;border-radius:9999rpx;padding:18rpx 24rpx}
.srch-cancel{margin-left:16rpx}
.srch-suggest{background:#fff}
.srch-suggest-item{padding:26rpx 32rpx;border-bottom:1px solid #f1f1f1}
.srch-history{padding:20rpx}
.srch-history-hd{display:flex;justify-content:space-between;color:#888;margin-bottom:12rpx}
.srch-tags{display:flex;flex-wrap:wrap;gap:12rpx}
.srch-tag{background:#f5f5f7;border-radius:9999rpx;padding:10rpx 22rpx}
.srch-result .srch-item{display:flex;padding:24rpx;border-bottom:1px solid #f5f5f7}
.srch-thumb{width:180rpx;height:180rpx;border-radius:16rpx;margin-right:20rpx}
.srch-title{font-weight:600}
.srch-price{margin-top:8rpx;color:#ff4d4f}
.srch-empty,.srch-loading,.srch-nomore{padding:40rpx;text-align:center;color:#888}


