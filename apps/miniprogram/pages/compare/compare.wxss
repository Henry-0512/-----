/* pages/compare/compare.wxss */

.compare-page {
  height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.compare-header {
  background: white;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.back-btn {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.page-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.clear-btn {
  font-size: 28rpx;
  color: #ff4d4f;
  padding: 8rpx 16rpx;
}

/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 48rpx;
}

.go-shopping-btn {
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

.go-shopping-btn::after {
  border: none;
}

/* 对比表格 */
.compare-table {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.table-row {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 100rpx;
}

.table-row.image-row {
  min-height: 200rpx;
}

.table-row.has-difference {
  background: #fff7e6;
}

.row-label {
  width: 140rpx;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  border-right: 1rpx solid #f0f0f0;
  padding: 20rpx 16rpx;
  text-align: center;
  line-height: 1.3;
}

.row-content {
  flex: 1;
  overflow-x: auto;
}

/* 商品图片 */
.product-images {
  display: flex;
  height: 100%;
}

.product-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff4d4f;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

/* 字段值 */
.field-values {
  display: flex;
  height: 100%;
}

.field-value {
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 16rpx;
  border-right: 1rpx solid #f0f0f0;
}

.field-value.different {
  background: #fff1f0;
  border-left: 4rpx solid #ff4d4f;
}

.value-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.4;
  word-break: break-all;
}

/* 底部操作 */
.compare-footer {
  background: white;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.compare-count {
  font-size: 26rpx;
  color: #666;
}

.view-detail-btn {
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

.view-detail-btn::after {
  border: none;
}
