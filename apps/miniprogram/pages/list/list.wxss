/* pages/list/list.wxss - IKEA风格重设计 */
.container {
  min-height: 100vh;
  background: #ffffff; /* 页面统一纯白底 */
  width: 100vw; /* 明确设置容器宽度 */
  max-width: 100vw; /* 防止超出屏幕 */
  overflow-x: hidden; /* 恢复隐藏水平溢出 */
  box-sizing: border-box; /* 包含padding和border */
}

/* 背景图（Hero） 满幅覆盖 */
.hero {
  width: 100%;
  height: 420rpx;
  background-image: var(--hero-url);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  padding-top: calc(env(safe-area-inset-top) + 0rpx);
  margin-top: 0;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent; /* 去掉灰感渐变，避免与白色筛选栏产生分界 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 90rpx 24rpx 60rpx;
}

.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-back {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  transition: all 0.3s ease;
}

.back-arrow {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.nav-placeholder {
  width: 80rpx;
}

.hero-title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

/* 筛选标签栏 */
/* 筛选栏：胶囊边框样式 */
.filter-bar {
  background: #ffffff;
  /* 去掉下边框，避免与上方Hero形成明显分界线 */
  padding: 24rpx 0;
  width: 100%;
  max-width: 100vw;
  position: relative;
  overflow: visible;
  isolation: isolate;
  z-index: 10;
}

.filter-scroll {
  width: 100%;
  height: 88rpx;
  position: relative;
  z-index: 2;
  pointer-events: auto;
}

.filter-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 0 20rpx;
}

.filter-chip {
  flex: 0 0 auto;
  padding: 0 26rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 999rpx;
  border: 1rpx solid #E5E6EB;
  background: #fff;
  color: #333;
  font-size: 26rpx;
  white-space: nowrap;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.filter-chip:active {
  transform: scale(0.95);
  transition: transform 0.1s ease;
}

.filter-chip.is-active {
  border-color: #007AFF;
  color: #007AFF;
  background: linear-gradient(135deg, #E3F2FD 0%, #F3E5F5 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.15);
  transform: translateY(-2rpx);
}

.filter-chip.is-active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
  transform: translateX(-100%);
  animation: shimmer 1.5s infinite;
  pointer-events: none;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.filter-chip.filter-all {
  border-color: #007AFF;
  color: #007AFF;
}

.filter-chip.clear-filter {
  border-color: #ff6b35;
  color: #ff6b35;
  background: #fff5f2;
}

.filter-chip.clear-filter:active {
  background: #ffe8e0;
}

/* 排序胶囊，略突出 */
.filter-chip.sort-chip {
  border-color: #E5E6EB;
  color: #111;
  font-weight: 600;
}

.filter-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  color: white;
  background: #ff6b35;
  border-radius: 16rpx;
  padding: 0 8rpx;
}

/* 筛选结果提示 */
.filter-result-tip {
  background: linear-gradient(135deg, #E3F2FD 0%, #F3E5F5 100%);
  padding: 16rpx 24rpx;
  margin: 0 24rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #007AFF;
  animation: slideInDown 0.3s ease-out;
}

.tip-text {
  font-size: 26rpx;
  color: #007AFF;
  font-weight: 500;
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 商品数量和视图切换 */
.products-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: white;
  width: 100%; /* 明确设置宽度 */
  max-width: 100vw; /* 防止超出 */
  box-sizing: border-box; /* 包含padding */
}

.products-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}



/* 邮编和门店选择 */
.location-bar {
  display: flex;
  padding: 0 24rpx 24rpx;
  background: white;
  gap: 24rpx;
  width: 100%; /* 明确设置宽度 */
  max-width: 100vw; /* 防止超出 */
  box-sizing: border-box; /* 包含padding */
}

.location-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: white;
  transition: all 0.3s ease;
}

.location-item:active {
  background: #f5f5f5;
}

.location-icon {
  font-size: 32rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 商品网格 - 一比一复制图片样式 */
.product-grid {
  display: grid !important;
  grid-template-columns: 1fr 1fr !important;
  gap: 16rpx !important;
  padding: 0 24rpx 24rpx !important;
  margin: 0 !important;
  width: 100% !important;
  box-sizing: border-box !important;
  max-width: 100vw !important;
  overflow: hidden !important;
}

/* 强制覆盖任何可能的父级样式 */
.container .product-grid,
.container > view > .product-grid,
view > .product-grid {
  padding: 0 24rpx 24rpx !important;
  margin: 0 !important;
  width: 100% !important;
  box-sizing: border-box !important;
}

.new-product-card {
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 商品图片区域 */
.product-image {
  position: relative;
  width: 100%;
  height: 360rpx;
  background: #f8f8f8;
}

.product-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 成色徽章 */
.condition-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: #FFF6E6;
  color: #A86200;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  border: 1px solid #FFE2B4;
  z-index: 2;
}

/* Best seller 徽章 */
.best-seller-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: #e31e24;
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  z-index: 2;
}

/* 收藏按钮 */
.new-product-card .favorite-btn {
  position: absolute !important;
  top: 12rpx !important;
  right: 12rpx !important;
  width: 48rpx !important;
  height: 48rpx !important;
  background: rgba(255, 255, 255, 0.9) !important;
  border: none !important;
  border-radius: 50% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15) !important;
  z-index: 2 !important;
  transition: all 0.3s ease !important;
  transform: scale(1) !important;
}

/* 收藏按钮点击动画 */
.new-product-card .favorite-btn:active {
  transform: scale(0.9) !important;
  background: rgba(255, 255, 255, 1) !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2) !important;
}

/* 已收藏状态 */
.new-product-card .favorite-btn.favorited {
  background: rgba(255, 192, 203, 0.9) !important;
  box-shadow: 0 2rpx 8rpx rgba(255, 105, 180, 0.3) !important;
}

.new-product-card .favorite-btn.favorited:active {
  background: rgba(255, 192, 203, 1) !important;
  box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.4) !important;
}

.heart-icon {
  font-size: 24rpx;
}



/* 商品信息区域 */
.product-info {
  padding: 16rpx;
  position: relative;
}

.product-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 价格区域 */
.price-section {
  margin-bottom: 12rpx;
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.price-text {
  font-size: 32rpx;
  font-weight: 800;
  color: #000;
}



/* 评分区域 */
.rating-section {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.stars {
  display: flex;
  margin-right: 8rpx;
}

.star {
  font-size: 24rpx;
  color: #000;
  margin-right: 2rpx;
}

.review-count {
  font-size: 24rpx;
  color: #999;
}



/* 选项链接 */
.options-link {
  font-size: 24rpx;
  color: #000;
  font-weight: 500;
  margin-bottom: 16rpx;
}



/* 卡片裁剪，防止任何子元素外溢 */
.new-product-card, .lv-card { overflow: hidden; }






/* ===== 大图列表样式 ===== */

/* 容器 */
.lv-list{
  display:flex; flex-direction:column; align-items:center;
  padding: 0 24rpx 24rpx; gap: 16rpx;
}

/* 卡片 */
.lv-card{
  background:#fff; border:1px solid #E5E7EB; border-radius:16rpx;
  box-shadow:0 4rpx 16rpx rgba(0,0,0,.04); overflow:hidden; position:relative;
  transition: all 0.3s ease;
}

.lv-card.filtered-item {
  animation: filterItemAppear 0.5s ease-out;
  transform: scale(1);
}

@keyframes filterItemAppear {
  0% {
    opacity: 0;
    transform: scale(0.8) translateY(20rpx);
  }
  50% {
    opacity: 0.7;
    transform: scale(0.95) translateY(10rpx);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 大图 */
.lv-hero{ position:relative; width:100%; }
.lv-img{ width:100%; height:100%; display:block; object-fit:cover; }

/* 徽标 */
.lv-badge{
  position:absolute; left:14rpx; top:14rpx; padding:8rpx 14rpx; border-radius:9999rpx;
  font-size:22rpx; font-weight:700; background:#FFF6E6; color:#A86200; border:1px solid #FFE2B4;
}

/* 收藏与加购 */
.lv-fav{
  position:absolute; right:14rpx; top:14rpx; width:60rpx; height:60rpx; padding:0; border:none;
  background:rgba(255,255,255,.92); border-radius:9999rpx; display:flex; justify-content:center; align-items:center;
  box-shadow:0 4rpx 12rpx rgba(0,0,0,.08);
  transition: all 0.3s ease;
}

.lv-fav:active {
  transform: scale(0.95);
  background: rgba(255,255,255,1);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,.12);
}



.lv-ico{ 
  width:36rpx; height:36rpx; 
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 文本区 */
.lv-body{ padding:16rpx 18rpx 16rpx; }
.lv-title{
  font-size:30rpx; font-weight:800; color:#1F2A37; line-height:40rpx;
}
.two-lines{
  display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden; height:80rpx;
}
.lv-sub{ color:#6B7280; font-size:24rpx; line-height:34rpx; height:34rpx; overflow:hidden; white-space:nowrap; text-overflow:ellipsis; }

.lv-price-row{ display:flex; align-items:baseline; gap:12rpx; margin-top:10rpx; }
.lv-price{ font-size:34rpx; font-weight:900; color:#1F2A37; }


.lv-meta{ display:flex; flex-direction:column; gap:8rpx; margin-top:10rpx; }
.lv-dot{ position:relative; padding-left:22rpx; color:#374151; font-size:24rpx; }
.lv-dot::before{ content:''; position:absolute; left:6rpx; top:12rpx; width:8rpx; height:8rpx; background:#10B981; border-radius:50%; }

.lv-opts{ margin-top:10rpx; color:#2C4E80; font-weight:700; font-size:26rpx; }

/* 兼容清理：避免旧样式把卡片拉伸 */
.lv-list .old-wrap, .lv-list .item, .lv-list .goods-card{ width:auto; flex:none; }

/* ===== 视图切换按钮样式 ===== */

.view-toggle {
  display: flex;
  gap: 8rpx;
}

.toggle-btn {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  width: 60rpx !important;
  height: 60rpx !important;
  border: 2rpx solid #e0e0e0 !important;
  border-radius: 8rpx !important;
  background: white !important;
  cursor: pointer !important;
  transition: all 0.3s ease !important;
  position: relative !important;
  z-index: 10 !important;
  pointer-events: auto !important;
}

.toggle-btn:active {
  transform: scale(0.95);
  background: #f5f5f5;
}

.toggle-btn.active {
  background: #333;
  border-color: #333;
}

.toggle-btn.active:active {
  background: #555;
}

.toggle-icon {
  font-size: 28rpx;
  color: #666;
  pointer-events: none;
}

.toggle-btn.active .toggle-icon {
  color: white;
}

/* 加载更多 */
.load-more {
  padding: 40rpx 24rpx;
  text-align: center;
  background: white;
}

.load-more-text {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 24rpx;
  background: white;
}

.empty-icon {
  font-size: 120rpx;
  color: #e0e0e0;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
}

/* 骨架屏 */
.skeleton {
  background: white;
  padding: 24rpx;
}

.skeleton-header,
.skeleton-item {
  background: #f0f0f0;
  border-radius: 8rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite alternate;
}

.skeleton-header {
  height: 60rpx;
  margin-bottom: 24rpx;
}

.skeleton-item {
  height: 400rpx;
  margin-bottom: 24rpx;
}

@keyframes skeleton-loading {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0.6;
  }
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 24rpx;
  background: white;
}

.error-icon {
  font-size: 120rpx;
  color: #ff6b35;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.retry-btn {
  padding: 20rpx 40rpx;
  background: #007aff;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}