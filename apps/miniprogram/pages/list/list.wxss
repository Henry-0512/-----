/* pages/list/list.wxss - IKEA风格重设计 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 背景图片区域 */
.hero-section {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 100%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40rpx 24rpx 60rpx;
}

.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-back {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  transition: all 0.3s ease;
}

.back-arrow {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.nav-placeholder {
  width: 80rpx;
}

.hero-title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

/* IKEA风格筛选栏 */
.ikea-filter-bar {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
  gap: 16rpx;
}

.filter-tags {
  flex: 1;
  white-space: nowrap;
}

.filter-tag {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  background: white;
  transition: all 0.3s ease;
}

.filter-tag.active {
  background: #333;
  border-color: #333;
}

.tag-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.filter-tag.active .tag-text {
  color: white;
}

.filter-button {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
}

.filter-icon {
  font-size: 32rpx;
  color: #333;
}

.filter-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 20rpx;
  color: white;
  background: #ff6b35;
  border-radius: 18rpx;
  padding: 0 8rpx;
}

/* 商品数量和视图切换 */
.products-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: white;
}

.products-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.view-toggle {
  display: flex;
  gap: 8rpx;
}

.toggle-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: white;
}

.toggle-btn.active {
  background: #333;
  border-color: #333;
}

.toggle-icon {
  font-size: 28rpx;
  color: #666;
}

.toggle-btn.active .toggle-icon {
  color: white;
}

/* 邮编和门店选择 */
.location-bar {
  display: flex;
  padding: 0 24rpx 24rpx;
  background: white;
  gap: 24rpx;
}

.location-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: white;
  transition: all 0.3s ease;
}

.location-item:active {
  background: #f5f5f5;
}

.location-icon {
  font-size: 32rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 商品网格 */
.items-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
  background: white;
}

/* 加载更多 */
.load-more {
  padding: 40rpx 24rpx;
  text-align: center;
  background: white;
}

.load-more-text {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 24rpx;
  background: white;
}

.empty-icon {
  font-size: 120rpx;
  color: #e0e0e0;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
}

/* 骨架屏 */
.skeleton {
  background: white;
  padding: 24rpx;
}

.skeleton-header,
.skeleton-item {
  background: #f0f0f0;
  border-radius: 8rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite alternate;
}

.skeleton-header {
  height: 60rpx;
  margin-bottom: 24rpx;
}

.skeleton-item {
  height: 400rpx;
  margin-bottom: 24rpx;
}

@keyframes skeleton-loading {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0.6;
  }
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 24rpx;
  background: white;
}

.error-icon {
  font-size: 120rpx;
  color: #ff6b35;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.retry-btn {
  padding: 20rpx 40rpx;
  background: #007aff;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}