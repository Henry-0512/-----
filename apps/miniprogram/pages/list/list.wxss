/* pages/list/list.wxss */
.container {
  background: #ffffff;
  min-height: 100vh;
}

.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #666;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
}

.nav-back {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.nav-placeholder {
  width: 80rpx;
}

/* 筛选控制栏 */
.filter-controls {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
}

.control-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  background: white;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.control-button.active {
  border-color: #007AFF;
  background: #F0F9FF;
}

.control-text {
  font-size: 28rpx;
  color: #374151;
}

.control-button.active .control-text {
  color: #007AFF;
}

.control-arrow {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: bold;
}

.filter-count {
  font-size: 24rpx;
  color: #007AFF;
  font-weight: 600;
}

/* 排序状态显示 */
.sort-status {
  padding: 16rpx 24rpx;
  background: #F0F9FF;
  border-bottom: 2rpx solid #E0F2FE;
}

.sort-text {
  font-size: 24rpx;
  color: #0369A1;
  font-weight: 500;
}

.result-info {
  padding: 16rpx 24rpx;
  background: #f8f8f8;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-text {
  font-size: 26rpx;
  color: #666;
}

.search-keyword {
  color: #007AFF;
  font-weight: bold;
}

/* 商品列表 - 2列网格 - 统一布局 */
.items-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx; /* 减小间距，防止超出 */
  padding: 16rpx; /* 减小边距 */
  box-sizing: border-box;
  width: 100%;
  max-width: 100vw;
  overflow: hidden;
}

/* 底部状态 */
.load-more, .no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
}

/* 筛选面板 */
.filter-sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  z-index: 1000;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.filter-sheet.show {
  transform: translateY(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-close {
  font-size: 32rpx;
  color: #666;
  padding: 8rpx;
}

.filter-content {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.filter-actions {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.filter-reset {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  background: white;
  color: #374151;
  font-size: 28rpx;
}

.filter-apply {
  flex: 2;
  padding: 24rpx;
  text-align: center;
  background: #007AFF;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 遮罩层 */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.filter-mask.show {
  opacity: 1;
}