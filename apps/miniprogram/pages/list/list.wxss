/* pages/list/list.wxss */
.container {
  background: #f8f8f8;
  min-height: 100vh;
}

.search-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
}

.search-box {
  flex: 1;
  margin-right: 24rpx;
  position: relative;
}

.search-input {
  background: #f5f5f5;
  border-radius: 48rpx;
  padding: 24rpx 32rpx;
  padding-right: 80rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.clear-search {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  font-size: 24rpx;
  color: #666;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 32rpx;
  background: #007AFF;
  color: white;
  border-radius: 48rpx;
  font-size: 28rpx;
}

.filter-text {
  font-size: 28rpx;
}

.filter-icon {
  font-size: 24rpx;
}

/* 结果统计 */
.result-info {
  padding: 16rpx 24rpx;
  background: #f8f8f8;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-text {
  font-size: 26rpx;
  color: #666;
}

.search-keyword {
  color: #007AFF;
  font-weight: bold;
}

/* 商品列表 - 2列网格 */
.items-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 24rpx;
  gap: 20rpx;
}

.items-grid product-card {
  width: calc(50% - 10rpx);
}

/* 底部状态 */
.load-more, .no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  color: #666;
  font-size: 28rpx;
  margin-top: 24rpx;
}

.no-more {
  color: #999;
  font-size: 26rpx;
}

/* 加载和错误状态 */
.loading, .error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #666;
  font-size: 28rpx;
  gap: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  text-align: center;
  padding: 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}


