/* pages/list/list.wxss - IKEA风格重设计 */
.container {
  min-height: 100vh;
  background: #ffffff; /* 页面统一纯白底 */
  width: 100vw; /* 明确设置容器宽度 */
  max-width: 100vw; /* 防止超出屏幕 */
  overflow-x: hidden; /* 恢复隐藏水平溢出 */
  box-sizing: border-box; /* 包含padding和border */
}

/* 背景图（Hero） 满幅覆盖 */
.hero {
  width: 100%;
  height: 420rpx;
  background-image: var(--hero-url);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  padding-top: calc(env(safe-area-inset-top) + 0rpx);
  margin-top: 0;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent; /* 去掉灰感渐变，避免与白色筛选栏产生分界 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 90rpx 24rpx 60rpx;
}

.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-back {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  transition: all 0.3s ease;
}

.back-arrow {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.nav-placeholder {
  width: 80rpx;
}

.hero-title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

/* 筛选标签栏 */
/* 筛选栏：胶囊边框样式 */
.filter-bar {
  background: #ffffff;
  /* 去掉下边框，避免与上方Hero形成明显分界线 */
  padding: 24rpx 0;
  width: 100%;
  max-width: 100vw;
  position: relative;
  overflow: visible;
  isolation: isolate;
  z-index: 10;
}

.filter-scroll {
  width: 100%;
  height: 88rpx;
  position: relative;
  z-index: 2;
}

.filter-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 0 20rpx;
}

.filter-chip {
  flex: 0 0 auto;
  padding: 0 26rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 999rpx;
  border: 1rpx solid #E5E6EB;
  background: #fff;
  color: #333;
  font-size: 26rpx;
  white-space: nowrap;
}

.filter-chip.is-active {
  border-color: #6F7BF7;
  color: #2F3BFF;
  background: #F4F6FF;
}

.filter-chip.filter-all {
  border-color: #007AFF;
  color: #007AFF;
}

/* 排序胶囊，略突出 */
.filter-chip.sort-chip {
  border-color: #E5E6EB;
  color: #111;
  font-weight: 600;
}

.filter-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  color: white;
  background: #ff6b35;
  border-radius: 16rpx;
  padding: 0 8rpx;
}

/* 商品数量和视图切换 */
.products-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: white;
  width: 100%; /* 明确设置宽度 */
  max-width: 100vw; /* 防止超出 */
  box-sizing: border-box; /* 包含padding */
}

.products-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.view-toggle {
  display: flex;
  gap: 8rpx;
}

.toggle-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: white;
}

.toggle-btn.active {
  background: #333;
  border-color: #333;
}

.toggle-icon {
  font-size: 28rpx;
  color: #666;
}

.toggle-btn.active .toggle-icon {
  color: white;
}

/* 邮编和门店选择 */
.location-bar {
  display: flex;
  padding: 0 24rpx 24rpx;
  background: white;
  gap: 24rpx;
  width: 100%; /* 明确设置宽度 */
  max-width: 100vw; /* 防止超出 */
  box-sizing: border-box; /* 包含padding */
}

.location-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: white;
  transition: all 0.3s ease;
}

.location-item:active {
  background: #f5f5f5;
}

.location-icon {
  font-size: 32rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 商品网格 */
.items-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
  background: white;
  box-sizing: border-box; /* 确保padding不会导致溢出 */
  width: 100%; /* 明确设置宽度 */
  max-width: 100vw; /* 防止超出屏幕 */
  overflow: hidden; /* 防止内容溢出 */
}

/* 加载更多 */
.load-more {
  padding: 40rpx 24rpx;
  text-align: center;
  background: white;
}

.load-more-text {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 24rpx;
  background: white;
}

.empty-icon {
  font-size: 120rpx;
  color: #e0e0e0;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
}

/* 骨架屏 */
.skeleton {
  background: white;
  padding: 24rpx;
}

.skeleton-header,
.skeleton-item {
  background: #f0f0f0;
  border-radius: 8rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite alternate;
}

.skeleton-header {
  height: 60rpx;
  margin-bottom: 24rpx;
}

.skeleton-item {
  height: 400rpx;
  margin-bottom: 24rpx;
}

@keyframes skeleton-loading {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0.6;
  }
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 24rpx;
  background: white;
}

.error-icon {
  font-size: 120rpx;
  color: #ff6b35;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.retry-btn {
  padding: 20rpx 40rpx;
  background: #007aff;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}