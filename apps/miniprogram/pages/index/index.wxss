/* pages/index/index.wxss */
.container {
  background: #ffffff;
  min-height: 100vh;
}

.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #666;
}

.search-bar {
  padding: 32rpx 24rpx 24rpx;
  background: white;
  margin-bottom: 16rpx;
}

.search-input {
  background: #f8f8f8;
  border-radius: 24rpx;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.search-input:active {
  background: #f0f0f0;
  border-color: #007AFF;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #666;
}

.search-placeholder {
  color: #999;
  font-size: 30rpx;
}

.banner-swiper {
  height: 320rpx;
  margin: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.5));
  padding: 40rpx 32rpx 24rpx;
}

.banner-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.section {
  margin: 24rpx 0;
  background: white;
  border-radius: 16rpx;
  margin: 16rpx 24rpx;
  padding: 0;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.view-more {
  font-size: 28rpx;
  color: #007AFF;
  display: flex;
  align-items: center;
}

.view-more::after {
  content: ">";
  margin-left: 8rpx;
  font-weight: bold;
}

.categories {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-bottom: 32rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #007AFF, #5AC8FA);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

.category-count {
  font-size: 20rpx;
  color: #999;
}

.hot-items {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding: 0 32rpx 32rpx;
}

.empty-hot-items {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
}

/* 筛选栏 */
.filter-bar {
  background: white;
  padding: 24rpx;
  margin: 16rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.filter-controls {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.filter-button {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #6B7280;
  background: white;
  transition: all 0.2s ease;
  gap: 8rpx;
}

.filter-button.active {
  border-color: #007AFF;
  background: #F0F9FF;
  color: #007AFF;
}

.filter-arrow {
  font-size: 24rpx;
  font-weight: bold;
}

.filter-count {
  font-size: 24rpx;
  color: #007AFF;
  font-weight: 600;
}

.filter-tags {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.filter-tag {
  font-size: 24rpx;
  color: #6B7280;
}

.filter-tag.active {
  color: #007AFF;
  font-weight: 600;
}

.filter-close {
  font-size: 24rpx;
  color: #6B7280;
  margin-left: auto;
}

.results-count {
  text-align: center;
  font-size: 26rpx;
  color: #374151;
  font-weight: 600;
}
