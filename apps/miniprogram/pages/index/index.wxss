/* pages/index/index.wxss */
.container {
  background: #f8f8f8;
  min-height: 100vh;
}

.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #666;
}

.search-bar {
  padding: 24rpx;
  background: white;
}

.search-input {
  background: #f5f5f5;
  border-radius: 48rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s ease;
}

.search-input:active {
  background: #e8e8e8;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

.banner-swiper {
  height: 320rpx;
  margin: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.5));
  padding: 40rpx 32rpx 24rpx;
}

.banner-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.section {
  margin: 24rpx 0;
  background: white;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-more {
  font-size: 28rpx;
  color: #007AFF;
}

.categories {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-bottom: 32rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #007AFF, #5AC8FA);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

.category-count {
  font-size: 20rpx;
  color: #999;
}

.hot-items {
  display: flex;
  flex-wrap: wrap;
  padding: 0 12rpx 32rpx;
}

.empty-hot-items {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
}
