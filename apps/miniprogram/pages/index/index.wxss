/* pages/index/index.wxss */
.container {
  background: #ffffff; /* 页面统一纯白底 */
  min-height: 100vh;
}

/* 引导登录弹窗样式 */
.auth-mask {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,.45);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.auth-modal {
  width: 640rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx 32rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,.12);
}
.auth-title { font-size: 34rpx; font-weight: 700; color: #111; }
.auth-sub { margin-top: 8rpx; font-size: 26rpx; color: #666; }
.auth-avatar { width: 168rpx; height: 168rpx; border-radius: 50%; margin: 24rpx auto 8rpx; box-shadow: 0 10rpx 28rpx rgba(0,0,0,.08);} 
.auth-avatar.placeholder { display:flex; align-items:center; justify-content:center; background: linear-gradient(180deg,#f7f8fa,#eef1f6); color:#a3aab5; }
.avatar-placeholder-icon { font-size: 64rpx; }
.auth-avatar.invalid { outline: 4rpx solid #ff4d4f; }
.avatar-choose { padding: 0; background: transparent; border: none; }
.avatar-choose::after { border: none; }
.auth-tip { margin-top: 4rpx; font-size: 24rpx; color: #8a8f99; }
.auth-input { margin-top: 16rpx; height: 76rpx; background: #f6f7f9; border-radius: 14rpx; padding: 0 22rpx; font-size: 28rpx; border: 2rpx solid transparent; }
.auth-input.invalid { border: 2rpx solid #ff4d4f; }
.auth-actions { display: flex; gap: 16rpx; margin-top: 24rpx; }
.auth-skip { flex: 1; background: #f3f4f6; color: #333; border-radius: 14rpx; }
.auth-login { flex: 1; background: linear-gradient(90deg,#6F7BF7 0%,#9B6DF3 100%); color: #fff; border-radius: 14rpx; }
.auth-skip::after,.auth-login::after { border: none; }

/* 头图（Hero） 满幅覆盖 */
.hero {
  width: 100%;
  height: 420rpx;
  background-image: var(--hero-url);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  padding-top: calc(env(safe-area-inset-top) + 0rpx);
  margin-top: 0;
}

.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #666;
}

.search-bar {
  padding: 32rpx 24rpx 24rpx;
  background: white;
  margin-bottom: 16rpx;
}

.search-input {
  background: #f8f8f8;
  border-radius: 24rpx;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.search-input:active {
  background: #f0f0f0;
  border-color: #007AFF;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #666;
}

.search-placeholder {
  color: #999;
  font-size: 30rpx;
}

.banner-swiper {
  height: 320rpx;
  margin: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #ffffff; /* 保证轮播容器白底 */
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.5));
  padding: 40rpx 32rpx 24rpx;
}

.banner-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.section {
  margin: 24rpx 0;
  background: white;
  border-radius: 16rpx;
  margin: 16rpx 24rpx;
  padding: 0;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.view-more {
  font-size: 28rpx;
  color: #007AFF;
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx; /* 扩大点击区域 */
  margin: -12rpx -16rpx;
  cursor: pointer;
  position: relative;
  z-index: 10; /* 确保不被遮挡 */
}

.view-more:active {
  opacity: 0.6;
  transform: scale(0.98);
}

.view-more::after {
  content: ">";
  margin-left: 8rpx;
  font-weight: bold;
}

.categories {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx 32rpx;
}

.cat {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-bottom: 32rpx;
  padding: 16rpx 8rpx; /* 扩大点击区域 */
  cursor: pointer;
  position: relative;
  z-index: 2; /* 防遮挡 */
  box-sizing: border-box;
}

.cat:active {
  opacity: 0.7;
  transform: scale(0.95);
}

.category-icon {
  width: 100rpx;
  height: 100rpx;
  background: transparent;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 48rpx;
  font-weight: normal;
  margin-bottom: 16rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.cat:active .category-icon {
  background: #f8f8f8;
  border-color: #e0e0e0;
  transform: scale(1.05);
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

.category-count {
  font-size: 20rpx;
  color: #999;
}

/* 商品网格 - 一比一复制图片样式 */
.product-grid {
  display: grid !important;
  grid-template-columns: 1fr 1fr !important;
  gap: 16rpx !important;
  padding: 0 24rpx 24rpx !important;
}

.new-product-card {
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 商品图片区域 */
.product-image {
  position: relative;
  width: 100%;
  height: 360rpx;
  background: #f8f8f8;
}

.product-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Best seller 徽章 */
.best-seller-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: #e31e24;
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  z-index: 2;
}

/* 成色徽章 */
.condition-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: #FFF6E6;
  color: #A86200;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  border: 1px solid #FFE2B4;
  z-index: 2;
}

/* 收藏按钮 */
.new-product-card .favorite-btn {
  position: absolute !important;
  top: 12rpx !important;
  right: 12rpx !important;
  width: 48rpx !important;
  height: 48rpx !important;
  background: rgba(255, 255, 255, 0.9) !important;
  border: none !important;
  border-radius: 50% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15) !important;
  z-index: 2 !important;
  transition: all 0.3s ease !important;
  transform: scale(1) !important;
}

/* 收藏按钮点击动画 */
.new-product-card .favorite-btn:active {
  transform: scale(0.9) !important;
  background: rgba(255, 255, 255, 1) !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2) !important;
}

/* 已收藏状态 */
.new-product-card .favorite-btn.favorited {
  background: rgba(255, 192, 203, 0.9) !important;
  box-shadow: 0 2rpx 8rpx rgba(255, 105, 180, 0.3) !important;
}

.new-product-card .favorite-btn.favorited:active {
  background: rgba(255, 192, 203, 1) !important;
  box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.4) !important;
}

.heart-icon {
  font-size: 24rpx;
}

/* 商品信息区域 */
.product-info {
  padding: 16rpx;
  position: relative;
}

.product-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 价格区域 */
.price-section {
  margin-bottom: 12rpx;
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.price-text {
  font-size: 32rpx;
  font-weight: 800;
  color: #000;
}



/* 评分区域 */
.rating-section {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.stars {
  display: flex;
  margin-right: 8rpx;
}

.star {
  font-size: 24rpx;
  color: #000;
  margin-right: 2rpx;
}

.review-count {
  font-size: 24rpx;
  color: #999;
}



/* 选项链接 */
.options-link {
  font-size: 24rpx;
  color: #000;
  font-weight: 500;
  margin-bottom: 16rpx;
}



/* 卡片裁剪，防止任何子元素外溢 */
.new-product-card { overflow: hidden; }

/* 商品信息区域 - 使用flex布局锚定按钮到底部 */
.product-info {
  display: flex;
  flex-direction: column;
  padding: 16rpx 16rpx 16rpx;
  min-height: 200rpx;
}





.empty-hot-items {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
}

/* 筛选栏 */
.filter-bar {
  background: white;
  padding: 24rpx;
  margin: 16rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.filter-controls {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.filter-button {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #6B7280;
  background: white;
  transition: all 0.2s ease;
  gap: 8rpx;
}

.filter-button.active {
  border-color: #007AFF;
  background: #F0F9FF;
  color: #007AFF;
}

.filter-arrow {
  font-size: 24rpx;
  font-weight: bold;
}

.filter-count {
  font-size: 24rpx;
  color: #007AFF;
  font-weight: 600;
}

.filter-tags {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.filter-tag {
  font-size: 24rpx;
  color: #6B7280;
}

.filter-tag.active {
  color: #007AFF;
  font-weight: 600;
}

.filter-close {
  font-size: 24rpx;
  color: #6B7280;
  margin-left: auto;
}

.results-count {
  text-align: center;
  font-size: 26rpx;
  color: #374151;
  font-weight: 600;
}

/* 骨架屏样式 */
.skeleton {
  padding: 24rpx;
}

.skeleton-search {
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-banner {
  height: 320rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-categories {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.skeleton-category {
  width: 120rpx;
  height: 120rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-products {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.skeleton-product {
  height: 300rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

/* 错误状态样式 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.error-message {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.retry-btn {
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.retry-btn:active {
  background: #0056CC;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-message {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 48rpx;
}

/* 隐藏管理入口 */
.admin-trigger {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  opacity: 0;
}

/* 商品统计样式 */
.results-summary {
  text-align: center;
  padding: 24rpx;
  background: white;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.results-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 600;
}
