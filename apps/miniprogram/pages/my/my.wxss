.page {
  background: #ffffff;
  min-height: 100vh;
}
.id-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 8rpx 24rpx 0;
  color: #666;
}
.id-label { font-size: 24rpx; }
.id-value {
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
}

.complete-tip {
  margin: 16rpx 24rpx 0;
  background: #fff7e6;
  border: 2rpx dashed #faad14;
  border-radius: 16rpx;
  padding: 20rpx;
}
.tip-title { font-size: 28rpx; color: #ad6800; font-weight: 700; }
.tip-row { display: flex; align-items: center; gap: 12rpx; margin-top: 12rpx; }
.nick-input { flex: 1; height: 68rpx; background: #fff; border-radius: 12rpx; padding: 0 16rpx; border: 2rpx solid #f0f0f0; }
.nick-input.invalid { border-color: #ff4d4f; }
.save-nick { padding: 12rpx 20rpx; background: #1677ff; color: #fff; border-radius: 12rpx; }
.save-nick::after { border: none; }
.tip-desc { display: block; margin-top: 8rpx; font-size: 22rpx; color: #ad6800; }
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 24rpx 24rpx;
  gap: 12rpx;
  background: linear-gradient(180deg,#f7f9ff 0%, #ffffff 100%);
}
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,.1);
}

.avatar-btn {
  padding: 0;
  border: none;
  background: transparent;
}
.avatar-btn::after { border: none; }
.name {
  margin-top: 8rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #111;
}
.desc {
  font-size: 24rpx;
  color: #8a8a8a;
}
.btn-login {
  margin-top: 8rpx;
  padding: 16rpx 36rpx;
  border-radius: 999rpx;
  background: #1677ff;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 6rpx 16rpx rgba(22,119,255,.25);
}
.btn-logout {
  margin-top: 8rpx;
  padding: 14rpx 28rpx;
  border-radius: 999rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 26rpx;
}
.section {
  margin-top: 16rpx;
  background: #fff;
}
.section-title {
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  background: #f7f7f7;
}
.cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #efefef;
  font-size: 30rpx;
}
.cell:last-child {
  border-bottom: none;
}
.arrow {
  color: #c0c0c0;
  font-size: 34rpx;
}
.cell.danger {
  color: #d93025;
}


