/* pages/category/category.wxss */

/* 页面容器 */
.page {
  padding: 16rpx 24rpx calc(env(safe-area-inset-bottom) + 24rpx);
  box-sizing: border-box;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 页面标题 */
.section-title {
  margin: 16rpx 0 24rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
}

/* 搜索区域 */
.search-section {
  margin-bottom: 32rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-placeholder {
  color: #999;
}

/* 分类网格 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

/* CategoryCard组件样式已移至组件内部 */

/* 响应式适配 */
@media (max-width: 375px) {
  .page {
    padding: 12rpx 20rpx calc(env(safe-area-inset-bottom) + 20rpx);
  }
  
  .section-title {
    font-size: 32rpx;
    margin: 12rpx 0 20rpx;
  }
  
  .grid {
    gap: 20rpx;
  }
  
  .title {
    font-size: 28rpx;
    line-height: 36rpx;
    left: 16rpx;
    bottom: 12rpx;
    right: 16rpx;
  }
  
  .search-box {
    padding: 20rpx;
  }
}

@media (min-width: 414px) {
  .page {
    padding: 20rpx 28rpx calc(env(safe-area-inset-bottom) + 28rpx);
  }
  
  .section-title {
    font-size: 36rpx;
    margin: 20rpx 0 28rpx;
  }
  
  .grid {
    gap: 28rpx;
  }
  
  .title {
    font-size: 32rpx;
    line-height: 42rpx;
    left: 24rpx;
    bottom: 20rpx;
    right: 24rpx;
  }
}