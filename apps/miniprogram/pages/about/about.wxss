/* pages/about/about.wxss */
.container {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 应用信息 */
.app-info {
  background: white;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.app-logo {
  margin-bottom: 32rpx;
}

.logo-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.app-version {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.app-description {
  display: block;
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
}

/* 公司信息 */
.company-section {
  background: white;
  margin-bottom: 20rpx;
}

.section-header {
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.company-info {
  padding: 32rpx 40rpx;
  text-align: center;
}

.company-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #007AFF;
  margin-bottom: 16rpx;
}

.company-founded {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.company-mission {
  display: block;
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

/* 特性网格 */
.features-section {
  background: white;
  margin-bottom: 20rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  padding: 32rpx 40rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 32rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.feature-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 联系方式 */
.contact-section {
  background: white;
  margin-bottom: 20rpx;
}

.contact-list {
  padding: 20rpx 0;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 24rpx 40rpx;
  border-bottom: 2rpx solid #f8f8f8;
  transition: background 0.2s ease;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item:active {
  background: #f0f9ff;
}

.contact-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
}

.contact-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.contact-label {
  font-size: 26rpx;
  color: #666;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.contact-action {
  padding: 12rpx 24rpx;
  background: #007AFF;
  border-radius: 20rpx;
}

.action-text {
  font-size: 24rpx;
  color: white;
}

/* 社交媒体 */
.social-section {
  background: white;
  margin-bottom: 20rpx;
}

.social-list {
  padding: 20rpx 0;
}

.social-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.social-item:last-child {
  border-bottom: none;
}

.social-platform {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.social-account {
  font-size: 26rpx;
  color: #666;
}

/* 法律信息 */
.legal-section {
  background: white;
  margin-bottom: 20rpx;
}

.legal-links {
  padding: 20rpx 0;
}

.legal-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 40rpx;
  border-bottom: 2rpx solid #f8f8f8;
  transition: background 0.2s ease;
}

.legal-item:last-child {
  border-bottom: none;
}

.legal-item:active {
  background: #f0f9ff;
}

.legal-text {
  font-size: 28rpx;
  color: #333;
}

.legal-arrow {
  font-size: 24rpx;
  color: #999;
  font-weight: bold;
}

/* 版权信息 */
.copyright-section {
  padding: 40rpx;
  text-align: center;
}

.copyright-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}
