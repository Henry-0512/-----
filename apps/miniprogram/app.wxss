/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* 通用样式 */
.btn-primary {
  background-color: #007AFF;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  border: none;
  font-size: 32rpx;
}

.btn-secondary {
  background-color: #f8f8f8;
  color: #333;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-1 {
  flex: 1;
}

.text-primary {
  color: #007AFF;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-bold {
  font-weight: bold;
}

.text-center {
  text-align: center;
}

.mt-16 {
  margin-top: 16rpx;
}

.mb-16 {
  margin-bottom: 16rpx;
}

.p-16 {
  padding: 16rpx;
}

.p-32 {
  padding: 32rpx;
}

/* 通用按钮类 - AskPriceButton 样式别名 */
.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  padding: 0 32rpx;
  border: none;
  border-radius: 12rpx;
  background: linear-gradient(90deg, #6F7BF7 0%, #9B6DF3 100%);
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  opacity: 0.8;
  transform: translateY(1rpx);
}

.action-btn--sm {
  height: 56rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
}

.action-btn--outline {
  background: transparent;
  border: 2rpx solid #6F7BF7;
  color: #6F7BF7;
}

.action-btn--outline:active {
  background: rgba(111, 123, 247, 0.1);
  transform: none;
}

.action-btn--full-width {
  width: 100%;
}
