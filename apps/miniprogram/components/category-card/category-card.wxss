/* components/category-card/category-card.wxss */

/* 卡片外容器 - 防止内容溢出 */
.category-card {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.06);
  background: #fff;
  transition: all 0.2s ease;
}

.category-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}

/* 图片容器 - 使用固定纵横比 16:10 */
.img-wrap {
  position: relative;
  width: 100%;
  padding-top: 62.5%; /* 10/16 = 0.625 */
  border-radius: 16rpx;
  overflow: hidden;
}

/* 图片铺满容器且不变形 */
.img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16rpx;
}

/* 底部渐变，保证白字可读 */
.gradient {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 40%;
  background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.45) 100%);
  border-radius: 16rpx;
}

/* 标题固定在左下角，最多两行省略 */
.title {
  position: absolute;
  left: 20rpx;
  bottom: 16rpx;
  right: 20rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-shadow: 0 2rpx 6rpx rgba(0,0,0,0.3);
  border-radius: 16rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .title {
    font-size: 28rpx;
    line-height: 36rpx;
    left: 16rpx;
    bottom: 12rpx;
    right: 16rpx;
  }
}

@media (min-width: 414px) {
  .title {
    font-size: 32rpx;
    line-height: 42rpx;
    left: 24rpx;
    bottom: 20rpx;
    right: 24rpx;
  }
}
