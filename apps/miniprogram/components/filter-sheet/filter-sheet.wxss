/* components/filter-sheet/filter-sheet.wxss */

.filter-sheet {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-sheet.visible {
  opacity: 1;
  visibility: visible;
}

.filter-content {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 80%;
  max-width: 600rpx;
  background: white;
  display: flex;
  flex-direction: column;
  transform: translateX(100%);
  transition: transform 0.3s ease;
}

.filter-sheet.visible .filter-content {
  transform: translateX(0);
}

/* 头部 */
.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: white;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.clear-btn {
  font-size: 28rpx;
  color: #007AFF;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 滚动区域 */
.filter-scroll {
  flex: 1;
  padding: 0 32rpx;
}

/* 筛选区块 */
.filter-section {
  padding: 32rpx 0;
  border-bottom: 2rpx solid #f8f8f8;
}

.filter-section:last-child {
  border-bottom: none;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 选项列表 */
.option-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.brand-list {
  gap: 12rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f8f8;
  border: 2rpx solid #f0f0f0;
  border-radius: 48rpx;
  transition: all 0.2s ease;
  min-height: 64rpx;
  box-sizing: border-box;
}

.brand-item {
  flex: 0 0 auto;
  justify-content: center;
}

.option-item:active {
  transform: scale(0.95);
}

.option-item.selected {
  background: #007AFF;
  border-color: #007AFF;
}

.option-item.selected .option-text,
.option-item.selected .option-count {
  color: white;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  transition: color 0.2s ease;
}

.option-count {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
  transition: color 0.2s ease;
}

/* 底部操作区 */
.filter-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f0f0f0;
  background: white;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.selected-info {
  flex: 1;
}

.selected-count {
  font-size: 26rpx;
  color: #666;
}

.confirm-btn {
  background: #007AFF;
  color: white;
  border-radius: 48rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
  min-width: 200rpx;
}

.confirm-btn::after {
  border: none;
}

.confirm-btn:active {
  background: #0056CC;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .filter-content {
    width: 85%;
  }
  
  .option-text {
    font-size: 26rpx;
  }
  
  .section-title {
    font-size: 26rpx;
  }
}
