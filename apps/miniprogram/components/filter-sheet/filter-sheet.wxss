/* components/filter-sheet/filter-sheet.wxss */

.filter-sheet-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.filter-sheet {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  transform: translateY(0);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 头部 */
.filter-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.reset-btn {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 16rpx;
}

.close-btn {
  font-size: 32rpx;
  color: #999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 内容区域 */
.filter-content {
  flex: 1;
  padding: 0 32rpx;
  overflow-y: auto;
}

.filter-section {
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.filter-section:last-child {
  border-bottom: none;
}

.filter-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

/* 范围筛选 */
.filter-range {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.range-values {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12rpx;
}

.range-text {
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

.range-separator {
  font-size: 24rpx;
  color: #999;
}

.range-slider {
  width: 100%;
  margin: 16rpx 0;
}

/* 多选筛选 */
.filter-multi {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.multi-option {
  position: relative;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  background: #fafafa;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 8rpx;
  min-width: 120rpx;
  justify-content: center;
}

.multi-option.selected {
  background: #e6f3ff;
  border-color: #007AFF;
  color: #007AFF;
}

.multi-option.disabled {
  background: #f5f5f5;
  border-color: #e0e0e0;
  opacity: 0.6;
  pointer-events: none;
}

.option-text {
  font-size: 26rpx;
  color: inherit;
}

.option-note {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
}

.option-check {
  font-size: 20rpx;
  color: #007AFF;
  font-weight: bold;
}

/* 布尔筛选 */
.filter-bool {
  display: flex;
}

.bool-option {
  position: relative;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  background: #fafafa;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 8rpx;
  justify-content: space-between;
  width: 100%;
}

.bool-option.selected {
  background: #e6f3ff;
  border-color: #007AFF;
  color: #007AFF;
}

/* 底部操作 */
.filter-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  background: white;
}

.apply-btn {
  width: 100%;
  height: 88rpx;
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.apply-btn::after {
  border: none;
}

.filter-count {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 手动输入价格样式 */
.range-inputs {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.input-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.input-label {
  font-size: 24rpx;
  color: #666;
}

.price-input {
  border: 2rpx solid #E5E7EB;
  border-radius: 8rpx;
  padding: 16rpx 12rpx;
  font-size: 28rpx;
  text-align: center;
  background: white;
}

.input-unit {
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

.range-slider-container {
  margin-top: 24rpx;
}

.slider-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}