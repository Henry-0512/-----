/* components/product-card/product-card.wxss */

/* 卡片基础容器 */
.product-card {
  position: relative;
  background: white;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  width: calc(50vw - 32rpx); /* 严格控制宽度，防止超出 */
  max-width: calc(50vw - 32rpx);
  box-sizing: border-box;
}

.product-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

/* 图片容器 */
.image-container {
  position: relative;
  width: 100%;
  height: 300rpx; /* 固定高度，避免超出 */
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 收藏按钮 */
.favorite-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
  transition: all 0.2s ease;
}

.favorite-btn:active {
  transform: scale(0.9);
}

.favorite-icon {
  font-size: 24rpx;
}

.favorite-btn.favorited {
  background: #FF6B6B;
}

/* 成色标签 */
.condition-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: #FF6B35;
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: 500;
}

/* 商品信息区域 */
.product-info {
  padding: 20rpx 20rpx 60rpx 20rpx; /* 底部留空给购物车按钮 */
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  box-sizing: border-box;
}

/* 商品名称 */
.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 商品描述 */
.product-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 价格区域 */
.price-section {
  margin-top: 8rpx;
  min-height: 60rpx;
  display: flex;
  align-items: center;
}

/* 价格容器 */
.price-container {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.price-symbol {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
}

.price-main {
  font-size: 48rpx; /* 大号价格，突出价格优势 */
  font-weight: 700;
  color: #111;
  line-height: 1;
}

.price-unit {
  font-size: 24rpx;
  color: #666;
  font-weight: 400;
}

/* 咨询容器 */
.consult-container {
  width: 100%;
}

/* 评分区域 */
.rating-section {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 4rpx;
}

.stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 20rpx;
  color: #ddd;
}

.star.filled {
  color: #FFD700;
}

.rating-count {
  font-size: 20rpx;
  color: #666;
}

/* 更多选项 */
.more-options {
  font-size: 22rpx;
  color: #007AFF;
  margin-top: 8rpx;
}

/* 右下角购物车按钮 */
.cart-btn {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  width: 56rpx;
  height: 56rpx;
  background: #007AFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transition: all 0.2s ease;
}

.cart-btn:active {
  transform: scale(0.9);
}

.cart-icon {
  font-size: 28rpx;
  color: white;
}

/* 网格卡片样式 */
.grid-card {
  width: 100%;
  max-height: 500rpx; /* 限制最大高度，防止超出屏幕 */
}

/* 列表卡片样式 */
.list-card {
  width: 100%;
  margin-bottom: 24rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .image-container {
    height: 280rpx; /* 小屏幕图片高度调整 */
  }
  
  .product-info {
    padding: 16rpx 16rpx 56rpx 16rpx;
  }
  
  .product-name {
    font-size: 26rpx;
  }
  
  .product-desc {
    font-size: 22rpx;
  }
  
  .price-main {
    font-size: 44rpx;
  }
  
  .price-symbol {
    font-size: 28rpx;
  }
  
  .cart-btn {
    width: 52rpx;
    height: 52rpx;
    bottom: 16rpx;
    right: 16rpx;
  }
  
  .cart-icon {
    font-size: 26rpx;
  }
  
  .condition-tag {
    font-size: 18rpx;
    padding: 5rpx 10rpx;
  }
}

@media (min-width: 414px) {
  .image-container {
    height: 320rpx; /* 大屏幕图片高度增加 */
  }
  
  .product-info {
    padding: 24rpx 24rpx 64rpx 24rpx;
  }
  
  .product-name {
    font-size: 30rpx;
  }
  
  .product-desc {
    font-size: 26rpx;
  }
  
  .price-main {
    font-size: 52rpx;
  }
  
  .price-symbol {
    font-size: 36rpx;
  }
  
  .cart-btn {
    width: 60rpx;
    height: 60rpx;
    bottom: 24rpx;
    right: 24rpx;
  }
  
  .cart-icon {
    font-size: 30rpx;
  }
  
  .condition-tag {
    font-size: 22rpx;
    padding: 7rpx 14rpx;
  }
}