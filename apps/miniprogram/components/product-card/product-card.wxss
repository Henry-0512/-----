/* components/product-card/product-card.wxss */

.product-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.product-card:active {
  transform: scale(0.98);
}

/* 网格卡片样式 */
.grid-card {
  margin-bottom: 24rpx;
}

.grid-card .card-info {
  padding: 24rpx;
}

/* 列表卡片样式 */
.list-card {
  display: flex;
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.list-card .card-image-container {
  flex-shrink: 0;
  margin-right: 24rpx;
}

.list-card .card-image {
  width: 160rpx;
  height: 160rpx;
}

.list-card .card-info {
  flex: 1;
  padding: 0;
}

/* 图片容器 */
.card-image-container {
  position: relative;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 240rpx;
  display: block;
}

/* 标签 */
.card-tags {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  line-height: 1;
}

/* 操作按钮 */
.card-actions {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-icon {
  font-size: 28rpx;
  color: #666;
}

.favorite-btn.favorited {
  background: #FF6B6B;
}

.favorite-btn.favorited .action-icon {
  color: white;
}

.compare-btn.compared {
  background: #007AFF;
}

.compare-btn.compared .action-icon {
  color: white;
}

/* 商品信息 */
.card-info {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.card-brand {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.card-dimensions {
  margin-bottom: 12rpx;
}

.dimensions-text {
  font-size: 22rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}

/* 价格信息 */
.card-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
  gap: 16rpx;
}

.monthly-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

/* 额外信息 */
.card-extra {
  margin-bottom: 16rpx;
}

.extra-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.extra-item:last-child {
  margin-bottom: 0;
}

.extra-label {
  color: #666;
  margin-right: 8rpx;
}

.extra-value {
  color: #333;
}

/* 库存状态 */
.card-status {
  margin-top: auto;
}

.status-text {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  line-height: 1;
}

.status-text.available {
  background: #E8F5E8;
  color: #22C55E;
}

.status-text.unavailable {
  background: #FEF2F2;
  color: #EF4444;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .card-title {
    font-size: 26rpx;
  }
  
  .monthly-price {
    font-size: 28rpx;
  }
  
  .card-image {
    height: 200rpx;
  }
}
