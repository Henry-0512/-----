/* components/product-card/product-card.wxss */

/* 卡片容器基础样式 */
.product-card {
  position: relative;
  transition: all 0.2s ease;
}

.product-card:active {
  transform: translateY(-2rpx);
}

/* 卡片主体 - 图像优先设计 */
.card {
  display: flex;
  flex-direction: column;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  transition: all 0.2s ease;
}

.card:active {
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.1);
}

/* 图片区域 - 更大更饱满 */
.media {
  position: relative;
  width: 100%;
  padding-top: 75%; /* 4:3 比例，比原来更饱满 */
}

.img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16rpx 16rpx 0 0;
}

/* 操作按钮区域 */
.actions {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-icon {
  font-size: 24rpx;
}

.favorite-btn.favorited {
  background: #FF6B6B;
}

.compare-btn.compared {
  background: #007AFF;
}

/* 信息区域 - 紧凑布局 */
.info {
  padding: 16rpx 16rpx 14rpx;
  box-sizing: border-box;
}

/* 标题 - 更突出 */
.title {
  font-size: 30rpx;
  font-weight: 700;
  line-height: 42rpx;
  color: #111;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 品牌 - 次要信息 */
.brand {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #8a8a8a;
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 精简价格行 */
.meta-row {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

/* 价格chip - 细小弱化 */
.price-chip {
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #111;
  background: #f2f3f5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
  max-width: 60%;
}

/* 咨询按钮 - 降权处理 */
ask-price-button {
  flex-shrink: 0;
}

/* 库存徽标 */
.stock {
  margin-top: 10rpx;
  align-self: flex-start;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #1f7a4d;
  background: #e7f7ee;
  white-space: nowrap;
}

/* 网格卡片样式 */
.grid-card {
  width: 100%;
}

/* 列表卡片样式 */
.list-card {
  width: 100%;
  margin-bottom: 24rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .info {
    padding: 14rpx 14rpx 12rpx;
  }
  
  .title {
    font-size: 28rpx;
    line-height: 38rpx;
  }
  
  .brand {
    font-size: 22rpx;
  }
  
  .meta-row {
    margin-top: 8rpx;
  }
  
  .price-chip {
    font-size: 20rpx;
    padding: 3rpx 8rpx;
  }
  
  .stock {
    font-size: 20rpx;
    padding: 5rpx 10rpx;
  }
  
  .actions {
    top: 10rpx;
    right: 10rpx;
  }
  
  .action-btn {
    width: 44rpx;
    height: 44rpx;
  }
  
  .action-icon {
    font-size: 22rpx;
  }
}

@media (min-width: 414px) {
  .info {
    padding: 18rpx 18rpx 16rpx;
  }
  
  .title {
    font-size: 32rpx;
    line-height: 44rpx;
  }
  
  .brand {
    font-size: 26rpx;
  }
  
  .meta-row {
    margin-top: 12rpx;
  }
  
  .price-chip {
    font-size: 24rpx;
    padding: 5rpx 12rpx;
  }
  
  .stock {
    font-size: 24rpx;
    padding: 7rpx 14rpx;
  }
  
  .actions {
    top: 14rpx;
    right: 14rpx;
  }
  
  .action-btn {
    width: 52rpx;
    height: 52rpx;
  }
  
  .action-icon {
    font-size: 26rpx;
  }
}

/* 图片更大后的整体协调 */
@media (min-width: 0) {
  .info {
    padding-top: 14rpx;
  }
  
  .meta-row {
    margin-top: 8rpx;
  }
}