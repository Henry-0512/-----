/* components/product-card/product-card.wxss */

.product-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.product-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

/* 网格卡片样式 - 统一布局设计 */
.grid-card {
  width: 100%; /* 父容器控制宽度 */
  height: auto;
  min-height: 420rpx;
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 12rpx; /* 统一圆角 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08); /* 统一阴影 */
  box-sizing: border-box;
  overflow: hidden; /* 防止内容溢出 */
  margin-bottom: 24rpx;
}

.grid-card .card-info {
  padding: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  overflow: hidden;
}

.grid-card .card-image {
  height: 200rpx; /* 统一图片高度 */
  width: 100%;
  object-fit: cover; /* 保证图片不变形，溢出部分裁掉 */
  border-radius: 12rpx 12rpx 0 0; /* 顶部圆角 */
}

/* 列表卡片样式 */
.list-card {
  display: flex;
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.list-card .card-image-container {
  flex-shrink: 0;
  margin-right: 24rpx;
}

.list-card .card-image {
  width: 160rpx;
  height: 160rpx;
}

.list-card .card-info {
  flex: 1;
  padding: 0;
}

/* 图片容器 */
.card-image-container {
  position: relative;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 240rpx;
  display: block;
}

/* 标签 */
.card-tags {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  line-height: 1;
}

/* 操作按钮 */
.card-actions {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-icon {
  font-size: 28rpx;
  color: #666;
}

.favorite-btn.favorited {
  background: #FF6B6B;
}

.favorite-btn.favorited .action-icon {
  color: white;
}

.compare-btn.compared {
  background: #007AFF;
}

.compare-btn.compared .action-icon {
  color: white;
}

/* 商品信息 */
.card-info {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 最多两行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis; /* 超出显示省略号 */
  line-height: 1.4;
  word-break: break-word;
  height: 72rpx; /* 固定高度，两行文字 */
  box-sizing: border-box;
}

.card-brand {
  font-size: 22rpx;
  color: #999; /* 灰色 */
  margin-bottom: 8rpx;
  white-space: nowrap; /* 单行省略 */
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
}

.card-dimensions {
  margin-bottom: 12rpx;
}

.dimensions-text {
  font-size: 20rpx; /* 统一字体大小 */
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}

/* 价格信息 - 响应式设计适配所有模式 */
.card-price {
  display: flex;
  flex-direction: column;
  margin-bottom: 8rpx;
  min-height: 70rpx; /* 固定最小高度防止布局跳跃 */
  justify-content: flex-start;
  gap: 4rpx;
}

.monthly-price {
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
  line-height: 1.2;
}

.original-price {
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
  line-height: 1.2;
}

/* 价格范围模式 */
.price-range {
  font-size: 26rpx;
  font-weight: 600;
  color: #FF6B35;
  line-height: 1.2;
}

/* 起价模式 */
.price-from {
  font-size: 26rpx;
  font-weight: 600;
  color: #FF6B35;
  line-height: 1.2;
}

/* 价格咨询模式 - 紧凑设计 */
.price-inquiry {
  display: flex;
  flex-direction: column;
  min-height: 70rpx;
  justify-content: flex-start;
  gap: 8rpx;
}

.inquiry-text {
  font-size: 22rpx;
  color: #666;
  font-style: italic;
}

.inquiry-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  line-height: 1.2;
  margin: 8rpx 0 0 0;
  width: 100%; /* 按钮宽度100%，固定在卡片底部 */
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.inquiry-btn:active {
  background: #0056CC;
}

.inquiry-btn::after {
  border: none;
}

/* 额外信息 */
.card-extra {
  margin-bottom: 16rpx;
}

.extra-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.extra-item:last-child {
  margin-bottom: 0;
}

.extra-label {
  color: #666;
  margin-right: 8rpx;
}

.extra-value {
  color: #333;
}

/* 库存状态 */
.card-status {
  margin-top: auto;
}

.status-text {
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  line-height: 1;
  font-weight: 500;
  display: inline-block;
}

.status-text.available {
  background: #E8F5E8;
  color: #2E7D32;
}

.status-text.unavailable {
  background: #FFEBEE;
  color: #C62828;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .card-title {
    font-size: 26rpx;
  }
  
  .monthly-price {
    font-size: 28rpx;
  }
  
  .card-image {
    height: 200rpx;
  }
}

/* 响应式设计 - 适配不同屏幕尺寸 */
@media (max-width: 375px) {
  .grid-card {
    min-height: 380rpx; /* 小屏幕适当减少高度 */
  }
  
  .grid-card .card-image {
    height: 180rpx; /* 小屏幕图片高度调整 */
  }
  
  .card-title {
    font-size: 24rpx;
    height: 64rpx; /* 小屏幕标题高度调整 */
  }
  
  .card-brand {
    font-size: 20rpx;
  }
  
  .dimensions-text {
    font-size: 18rpx;
  }
  
  .inquiry-btn {
    padding: 10rpx 12rpx;
    font-size: 18rpx;
  }
}

/* 大屏幕优化 */
@media (min-width: 414px) {
  .grid-card {
    min-height: 450rpx; /* 大屏幕增加高度 */
  }
  
  .grid-card .card-image {
    height: 220rpx; /* 大屏幕图片高度调整 */
  }
}
