/* components/size-sketch/size-sketch.wxss */

/* 弹窗样式 */
.size-sketch-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.size-sketch-modal {
  background: white;
  border-radius: 16rpx;
  width: 100%;
  max-width: 640rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  animation: modalFadeIn 0.3s ease-out;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 头部 */
.sketch-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.sketch-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 32rpx;
  color: #999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
}

/* 内容区域 */
.sketch-content {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

/* 画布容器 */
.sketch-canvas-container {
  position: relative;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: #fafafa;
  overflow: hidden;
}

.sketch-canvas {
  display: block;
}

/* 控制面板 */
.sketch-controls {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
}

.scale-controls,
.rotation-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.control-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: white;
  transition: all 0.2s ease;
}

.control-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.control-icon {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.control-text {
  font-size: 20rpx;
  color: #333;
}

.reset-btn,
.rotate-btn {
  width: auto;
  padding: 0 16rpx;
  gap: 8rpx;
}

.scale-text,
.rotation-text {
  font-size: 26rpx;
  color: #666;
  min-width: 80rpx;
  text-align: center;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* 提示信息 */
.sketch-tips {
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 8rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin: 0 32rpx 32rpx;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.4;
  flex: 1;
}

/* 内联模式样式 */
.size-sketch-inline {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  background: white;
  border-radius: 8rpx;
}

.size-sketch-inline .sketch-canvas-container {
  width: 100%;
  max-width: 400rpx;
  aspect-ratio: 1;
}

.size-sketch-inline .sketch-controls {
  gap: 16rpx;
}

.size-sketch-inline .scale-controls,
.size-sketch-inline .rotation-controls {
  gap: 12rpx;
}

.size-sketch-inline .control-btn {
  width: 56rpx;
  height: 56rpx;
}

.size-sketch-inline .sketch-tips {
  margin: 0;
  background: #f8f9fa;
  border-color: #e9ecef;
}

.size-sketch-inline .tip-text {
  color: #6c757d;
  font-size: 22rpx;
}