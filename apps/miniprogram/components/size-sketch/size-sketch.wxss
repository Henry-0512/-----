/* components/size-sketch/size-sketch.wxss */

/* 模态框样式 */
.size-sketch-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  padding: 40rpx;
}

.size-sketch-modal.visible {
  opacity: 1;
  visibility: visible;
}

.sketch-modal-content {
  width: 100%;
  max-width: 800rpx;
  max-height: 90%;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.sketch-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.sketch-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sketch-modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

/* 内联样式 */
.size-sketch-inline {
  width: 100%;
}

/* 视角切换 */
.view-tabs {
  display: flex;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
}

.view-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.2s ease;
}

.view-tab.active {
  background: white;
  color: #007AFF;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 示意图容器 */
.sketch-container {
  background: #fafafa;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

.sketch-diagram {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
  position: relative;
}

/* 家具形状 */
.furniture-shape {
  position: relative;
  background: linear-gradient(145deg, #e8e8e8, #ffffff);
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.furniture-shape.front-view {
  background: linear-gradient(145deg, #e1f5fe, #b3e5fc);
  border-color: #039BE5;
}

.furniture-shape.side-view {
  background: linear-gradient(145deg, #f3e5f5, #e1bee7);
  border-color: #8E24AA;
}

.furniture-shape.top-view {
  background: linear-gradient(145deg, #e8f5e8, #c8e6c8);
  border-color: #43A047;
}

.furniture-outline {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.furniture-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  background: rgba(255, 255, 255, 0.8);
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
}

/* 尺寸标注线 */
.dimension-lines {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.dimension-line {
  position: absolute;
  color: #007AFF;
  font-size: 20rpx;
  font-weight: bold;
}

.dimension-line.bottom {
  bottom: -40rpx;
  left: 50%;
  transform: translateX(-50%);
}

.dimension-line.right {
  right: -80rpx;
  top: 50%;
  transform: translateY(-50%);
}

.dimension-line.top {
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
}

.dimension-line.left {
  left: -80rpx;
  top: 50%;
  transform: translateY(-50%);
}

.dimension-text {
  background: white;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  border: 1rpx solid #007AFF;
  white-space: nowrap;
}

/* 控制栏 */
.sketch-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  padding: 16rpx;
  background: white;
  border-radius: 12rpx;
  border: 2rpx solid #f0f0f0;
}

.scale-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.other-controls {
  display: flex;
  gap: 16rpx;
}

.control-btn {
  width: 56rpx;
  height: 56rpx;
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.control-btn:active {
  transform: scale(0.9);
  background: #e0e0e0;
}

.reset-btn {
  width: auto;
  padding: 0 24rpx;
  border-radius: 28rpx;
}

.toggle-btn {
  width: auto;
  padding: 0 24rpx;
  border-radius: 28rpx;
}

.toggle-btn.active {
  background: #007AFF;
  border-color: #007AFF;
}

.toggle-btn.active .control-text {
  color: white;
}

.control-icon {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}

.control-text {
  font-size: 24rpx;
  color: #666;
}

.scale-text {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  min-width: 80rpx;
  text-align: center;
}

/* 尺寸信息表格 */
.size-info-table {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #f0f0f0;
}

.table-header {
  background: #f8f8f8;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.table-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.table-body {
  padding: 0;
}

.table-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.table-row:last-child {
  border-bottom: none;
}

.table-label {
  font-size: 28rpx;
  color: #666;
}

.table-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .sketch-modal-content {
    max-width: 95%;
  }
  
  .furniture-name {
    font-size: 20rpx;
  }
  
  .dimension-text {
    font-size: 18rpx;
  }
}
