/* components/AskPriceButton/index.wxss */

/* 基础按钮样式 */
.ask-price-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 12rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 去掉按钮默认边框 */
.ask-price-btn::after {
  border: none;
}

/* 尺寸变体 */
.ask-price-btn.size-md {
  height: 72rpx;
  padding: 0 32rpx;
}

.ask-price-btn.size-sm {
  height: 56rpx;
  padding: 0 24rpx;
}

/* 宽度变体 */
.ask-price-btn.full-width {
  width: 100%;
}

/* 样式变体 - 实心 */
.ask-price-btn.variant-solid {
  background: linear-gradient(90deg, #6F7BF7 0%, #9B6DF3 100%);
  color: white;
}

.ask-price-btn.variant-solid:active {
  opacity: 0.8;
  transform: translateY(1rpx);
}

/* 样式变体 - 描边 */
.ask-price-btn.variant-outline {
  background: transparent;
  border: 2rpx solid #6F7BF7;
  color: #6F7BF7;
}

.ask-price-btn.variant-outline:active {
  background: rgba(111, 123, 247, 0.1);
}

/* 文字样式 */
.ask-price-btn.size-md .btn-text {
  font-size: 28rpx;
  line-height: 1;
}

.ask-price-btn.size-sm .btn-text {
  font-size: 24rpx;
  line-height: 1;
}

/* 禁用状态 */
.ask-price-btn.disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.ask-price-btn.disabled:active {
  transform: none;
  opacity: 0.5;
}

/* 加载状态 */
.ask-price-btn.loading {
  opacity: 0.8;
}

.loading-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .ask-price-btn.size-md {
    height: 68rpx;
    padding: 0 28rpx;
  }
  
  .ask-price-btn.size-md .btn-text {
    font-size: 26rpx;
  }
  
  .ask-price-btn.size-sm {
    height: 52rpx;
    padding: 0 20rpx;
  }
  
  .ask-price-btn.size-sm .btn-text {
    font-size: 22rpx;
  }
}

@media (min-width: 414px) {
  .ask-price-btn.size-md {
    height: 76rpx;
    padding: 0 36rpx;
  }
  
  .ask-price-btn.size-md .btn-text {
    font-size: 30rpx;
  }
  
  .ask-price-btn.size-sm {
    height: 60rpx;
    padding: 0 28rpx;
  }
  
  .ask-price-btn.size-sm .btn-text {
    font-size: 26rpx;
  }
}
